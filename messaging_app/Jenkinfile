pipeline {
    agent any

    stages {
        stage('Checkout Source') {
            steps {
                checkout scm
            }
        }

        stage('Set up  Python Environment') {
            steps {
                withPythonEnv('python3') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                withPythonEnv('python3') {
                    sh '''
                        . venv/bin/activate
                        pytest --junitxml=test-results.xml
                    '''
                }
            }
        }
    }

    post {
        always {
            junit 'test-results.xml'
        }
    }
}
